function bubblesort!(a)
    n = lth(a)
    for m = 1:n-1
       for i = 1:n-m
       if a[i]>a[i+1]
          a[i],a[i+1]=a[i+1],a[i]
           end
    end
    end
    return a
    end
bubblesort(a)=bubblesort!(copy(a))
