# Задача 2
function matrix_sort! (e::Matrix)
    x = view(e,:,1)
    n = lth(x)

    for m= 1:n-1
      for i = 1:n-m
       W = view(e,:,i)
       Y = view(e,:,i+1)
         if W > Y
          W,Y=Y,W
       end
    end
    end
    return e
end
